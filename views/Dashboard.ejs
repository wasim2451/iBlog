<!DOCTYPE html>
<html lang="en">
 <%-include('./Partials/Head.ejs')  %>
 <style>
      html,
      body {
        height: 100%;
        margin: 0;
        padding: 0;
      }

      body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        font-family: 'Segoe UI', sans-serif;
        background-color: #fff;
      }

      main {
        flex: 1;
      }

      footer {
        margin-top: auto;
      }

      .blogs-wrapper {
        margin-top: 30px;
        margin-left: auto;
        margin-right: auto;
        padding: 0 40px;
        /* Enough side padding for big screens */
        margin-bottom: 30px;
      }

      .blogs-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: center;
        column-gap: 50px;
      }

      .blog-card {
        width: 100%;
        max-width: 300px;
        background-color: #fff;
        border-radius: 5px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
        overflow: hidden;
        display: flex;
        flex-direction: column;
        transition: box-shadow 0.3s ease-in-out;
      }

      .blog-card:hover {
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
      }

      .blog-card img {
        width: 100%;
        height: 180px;
        object-fit: cover;
      }

      .blog-content {
        padding: 15px;
        flex-grow: 1;
      }

      .blog-title {
        font-size: 1.1rem;
        font-weight: bold;
        color: #333;
        margin-bottom: 10px;
      }

      .blog-snippet {
        font-size: 0.9rem;
        color: #666;
        max-height: 70px;
        overflow: hidden;
        line-height: 1.5;
      }

      .read-more {
        margin-top: 5px;
        font-size: 0.9rem;
        color: #007bff;
        text-decoration: none;
        transition: color 0.3s ease;
        padding: 5%;
      }

      .read-more:hover {
        color: #0056b3;
      }

      .no-blogs {
        text-align: center;
        margin-top: 40px;
        font-size: 1.2rem;
        color: #888;
      }

      .author-name {
        display: block;
        text-align: right;
        font-size: 0.85rem;
        color: #666;
        margin: 10px 15px;
      }

      /* üì± Mobile Responsiveness */
      @media (max-width: 768px) {
        .blogs-wrapper {
          padding: 0 10px;
          /* Reduce left & right space on mobile */
        }

        .blog-card {
          width: 100%;
          max-width: 90%;
        }

        .blog-title {
          font-size: 1rem;
        }

        .blog-snippet {
          font-size: 0.85rem;
        }

        .author-name {
          font-size: 0.8rem;
        }

        .read-more {
          font-size: 0.85rem;
        }
      }
    </style>
<body>
    <%- include('./Partials/Navbar.ejs') %>
    <% if (typeof user !="undefined" || user!=null) { %>
            <main style="max-width: 1000px; margin: 0 auto; padding: 30px; font-family: 'Segoe UI', sans-serif; color: #333;">

  <!-- User Header -->
  <section style="display: flex; align-items: center; gap: 20px; margin-bottom: 40px; border-bottom: 2px solid #eee; padding-bottom: 20px;">
    <div style="width: 100px; height: 100px; border-radius: 50%; overflow: hidden;">
       <img 
        src="/<%=( user.profileimgURL !='undefined')? user.profileimgURL : 'images/default.png' %>" 
        alt="Profile" 
        style="width: 100%; height: 100%; object-fit: cover;"
        >
    </div>
    <div>
      <h2 style="margin: 0;"><%= user.fullname %></h2>
      <p style="margin: 5px 0; color: gray;"><%= user.email %></p>
      <p style="margin: 5px 0; color: gray;"><%= user.phone?user.phone:'No Phone Number' %></p>
      <p style="font-weight: 500;">Welcome to your dashboard!</p>
    </div>
  </section>

  <!-- Stats -->
  <section style="margin-bottom: 30px;">
    <div style="background: #f5f5f5; padding: 20px; border-radius: 12px; text-align: center;">
      <h3 style="margin: 0;">You‚Äôve written <%= blogs.length %> blog<%= blogs.length !== 1 ? 's' : '' %> so far ‚úçÔ∏è</h3>
    </div>
  </section>

  <!-- Blog Grid -->
  <section>
    <% if (blogs.length === 0) { %>
      <div style="text-align: center; color: gray;">
        <p>You haven't written any blogs yet. Start your first one today!</p>
      </div>
    <% } else { %>
      <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); gap: 20px;">
        <% blogs.forEach(blog => { %>
          <div style="border: 1px solid #ddd; border-radius: 10px; overflow: hidden; background: #fff; display: flex; flex-direction: column; height: 100%; box-shadow: 0 2px 8px rgba(0,0,0,0.05); transition: transform 0.2s;">
            <% if (blog.coverURL) { %>
              <img src="/<%= blog.coverURL %>" alt="Cover" style="width: 100%; height: 160px; object-fit: cover;">
            <% } %>

            <div style="padding: 15px; flex: 1;">
              <h4 style="margin: 0 0 10px;"><%= blog.title %></h4>
              <p style="color: #555; font-size: 14px; line-height: 1.5;">
                <%= blog.content.replace(/(<([^>]+)>)/gi, "").substring(0, 100) %>...
              </p>
            </div>

            <div style="padding: 0 15px 15px; font-size: 13px; color: #777; display: flex; justify-content: space-between; align-items: center;">
              <span>üìÖ <%= new Date(blog.createdAt).toLocaleDateString() %></span>
              <a href="/blog/view/showblog/<%= blog._id %>" style="color: #007bff; text-decoration: none;">Read More</a>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </section>
</main>


    <% } %>
     
     <div> <%- include('./Partials/Footer.ejs') %></div>
     <%-include('./Partials/Script.ejs')  %>
</body>
</html>