<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Verify Your Phone</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        * {
            box-sizing: border-box;
            /* font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; */
        }

        body {
            margin: 0;
            padding: 0;
            background: #f0f4f8;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
        }

        .container {
            background: #fff;
            max-width: 900px;
            width: 95%;
            margin: 20px;
            display: flex;
            flex-direction: row;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
        }

        .image-section {
            flex: 1;
            background: #f5f5f5;
            padding: 0;
        }

        .image-section img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .form-section {
            flex: 1;
            padding: 40px 30px;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        .form-section h2 {
            margin-bottom: 20px;
            font-size: 24px;
            color: #333;
        }

        .pe_signin_button {
            margin-top: 20px;
        }

        @media screen and (max-width: 768px) {
            .container {
                flex-direction: column;
                max-width: 95%;
            }

            .form-section {
                padding: 30px 20px;
            }

            .form-section h2 {
                font-size: 20px;
                text-align: center;
            }

            .pe_signin_button {
                display: flex;
                justify-content: center;
            }
        }
    </style>

    <script>
        function loadScript() {
            const script = document.createElement('script');
            script.src = 'https://www.phone.email/sign_in_button_v1.js';
            script.async = true;
            document.body.appendChild(script);

            window.phoneEmailListener = (userObj) => {
                const user_json_url = userObj.user_json_url;

                fetch(window.location.origin + '/user/verified-user', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        user_json_url,
                        fullname: "<%= fullname %>",
                        email: "<%= email %>",
                        password: "<%= password %>",
                        profileimgURL: "<%= profileimgURL %>"
                    })
                })
                .then(res => res.json())
                .then(data => {
                    if (data.success) {
                        alert("Account created! Redirecting to sign in...");
                        window.location.href = '/user/signin';
                    } else {
                        alert("Verification failed. Try again.");
                    }
                })
                .catch(err => {
                    console.error('Fetch error:', err);
                });
            };
        }
    </script>
</head>

<body onload="loadScript()">
    <div class="container">
        <div class="image-section">
            <img src="https://img.freepik.com/free-vector/enter-otp-concept-illustration_114360-7867.jpg?ga=GA1.1.1727319240.1747090589&semt=ais_hybrid&w=740" alt="OTP Verification Image">
        </div>
        <div class="form-section">
            <h2>Verify Your Phone to Complete Signup</h2>
            <div class="pe_signin_button" data-client-id="12026639104126382469"></div>
        </div>
    </div>
</body>
</html>
