<!DOCTYPE html>
<html lang="en">
<head>
    <%-include('./Partials/Head.ejs')  %>
</head>
<body>
    <%-include('./Partials/Navbar.ejs') %>
    <% if (typeof message !=='undefined') { %>
      <div class="container mt-4">
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
          <strong>Warning! </strong><%=message  %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>   
      </div>
    <% } %>
    <div class="container min-vh-100 d-flex justify-content-center align-items-center" style="background-color: #f9fafb; font-family: 'Segoe UI', sans-serif;">
      <div class="row shadow-sm overflow-hidden bg-white w-100" style="max-width: 900px;">
  
        <div class="col-12 col-md-6 p-0">
          <img src="https://img.freepik.com/free-photo/3d-render-secure-login-password-illustration_107791-16640.jpg?ga=GA1.1.1727319240.1747090589&semt=ais_hybrid&w=740"
               alt="Login Illustration"
               style="width: 100%; height: 100%; object-fit: cover;">
        </div>
    
        <div class="col-12 col-md-6 p-5">
          <h2 class="text-center mb-4" style="color: #333; font-weight: 500;">Sign In to Your Account</h2>
          <form action="/user/signin" method="post">
            <div class="mb-4">
              <label for="email" class="form-label" style="color: #555;">Email Address</label>
              <input type="email" class="form-control form-control-lg" id="email" name="email" placeholder="example@email.com" required>
            </div>
            <div class="mb-4">
              <label for="password" class="form-label" style="color: #555;">Password</label>
              <input type="password" class="form-control form-control-lg" id="password" name="password" placeholder="••••••••" required>
            </div>
            <button type="submit" class="btn btn-dark btn-lg w-100">Sign In</button>
          </form>
        </div>
        
      </div>
    </div>
    
      
      
    <%-include('./Partials/Script.ejs')  %>
</body>
</html>